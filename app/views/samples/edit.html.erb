      <div class=''>
        <%= f.label :ロケーション, class: ''%>
      </div>
      <div class='field-input'>
        <%= f.text_field :ロケーション, size:16 %>
      </div>

      <div class=''>
        <%= f.label :rent, class: ''%>
      </div>
      <div class='field-input'>
        <%= f.text_field :rent, size:16 %>
      </div>




        <%= f.submit "情報変更",class: 'btn01'%>
    </div>
    
  <% end %>
  <br>
  
</div>
