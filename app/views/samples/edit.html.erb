<div class='new-sample'>

  <%=form_with model: @sample, url:'update2', local: true do |f|%>
    <div class='sample-form'>
      <p class="fin"><%= notice %></p><br>
      <p class="fin"><%= flash[:already] %>


      <%= link_to "#{@sample.申込番号} の一覧へ戻る" , search_samples_path(keyword:@sample.申込番号 ), class:'btn01' %>

      <h1>サンプル情報変更</h1>

      <div class=''>
        <%= f.label :基本コード, class: ''%>
